@model RCLocacoes.Web.Mvc.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>

    <form asp-controller="Access" asp-action="Login" method="post">
        <h1>Login</h1>
        <input type="email" asp-for="Email"/>
        <input type="password" asp-for="Password" />
        <input type="checkbox" asp-for="KeepLoggedIn" />
        <button type="submit">Login</button>
    </form>

    @if (ViewData["ValidateMessage"] != null) { 
        <br />
        <br />
        <label>@ViewData["ValidateMessage"] </label>
    }

</body>
</html>
